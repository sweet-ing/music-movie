.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin: 0 0 10px 10px;
  color: #333;
}

.post-image{
  width: 100%;
  height: 400rpx;
  margin-bottom: 15px;
}

.post-content{
  font-size:28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin: 0 0 20rpx 20rpx;
}

/* 行内元素（自动为一行，水平） 块状元素 */
.post-like{
  font-size: 26rpx;
  margin: 0 0 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-like-image{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}
.post-like-font{
  margin-right: 40rpx;
}